<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.javaeeb1.mapper.GoodsMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="org.example.javaeeb1.pojo.Goods">
        <id column="goods_id" property="goodsId" />
        <result column="goods_name" property="goodsName" />
        <result column="category_id" property="categoryId" />
        <result column="price" property="price" />
        <result column="stock" property="stock" />
        <result column="goods_desc" property="goodsDesc" />
        <result column="goods_img" property="goodsImg" />
        <result column="create_time" property="createTime" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        goods_id, goods_name, category_id, price, stock, goods_desc, goods_img, create_time
    </sql>
    <select id="getAllGoods" resultMap="BaseResultMap">
        select * from goods
    </select>

</mapper>

<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.javaeeb1.mapper.CategoryMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="org.example.javaeeb1.pojo.Category">
        <id column="category_id" property="categoryId" />
        <result column="category_name" property="categoryName" />
        <result column="parent_id" property="parentId" />
        <result column="sort" property="sort" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        category_id, category_name, parent_id, sort
    </sql>
    <select id="getAllCategories" resultMap="BaseResultMap">
        select * from category
    </select>

</mapper>

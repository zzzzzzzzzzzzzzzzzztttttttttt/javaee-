<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.javaeeb1.mapper.OrderMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="org.example.javaeeb1.pojo.Order">
        <id column="order_id" property="orderId" />
        <result column="user_id" property="userId" />
        <result column="total_price" property="totalPrice" />
        <result column="create_time" property="createTime" />
        <result column="num" property="num" />
        <result column="goods_id" property="goodsId" />
    </resultMap>
    <resultMap id="OrderDtoResultMap" type="org.example.javaeeb1.pojo.OrderDto">
        <id column="order_id" property="orderId" />
        <result column="user_id" property="userId" />
        <result column="total_price" property="totalPrice" />
        <result column="create_time" property="createTime" />
        <result column="num" property="num" />
        <result column="goods_name" property="goodsName"/>
        <result column="goods_img" property="goodsImg"/>
    </resultMap>
    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        order_id, user_id, total_price, create_time, num, goods_id
    </sql>
    <insert id="add">
        insert into `order`(user_id,total_price,create_time,num,goods_id) values(#{userId},#{totalPrice},#{createTime},#{num},#{goodsId})
    </insert>
    <update id="update">
        update `order` set total_price=#{totalPrice},num=#{num} where order_id=#{orderId}
    </update>
    <select id="getAll" resultMap="OrderDtoResultMap">
        select order_id,user_id,total_price,order.create_time,num,`order`.goods_id,goods_name,goods_img from `order`,goods
        where `order`.goods_id=goods.goods_id and user_id=#{userId}
    </select>
    <select id="findByUserIdAndGoodsId" resultMap="BaseResultMap">

    select * from `order` where user_id=#{userId} and goods_id=#{goodsId}
    </select>

</mapper>

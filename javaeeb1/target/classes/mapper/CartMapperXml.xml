<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.javaeeb1.mapper.CartMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="org.example.javaeeb1.pojo.Cart">
        <id column="cart_id" property="cartId" />
        <result column="user_id" property="userId" />
        <result column="goods_id" property="goodsId" />
        <result column="num" property="num" />
        <result column="create_time" property="createTime" />
        <result column="price" property="totalPrice" />

    </resultMap>
    <resultMap id="CartDtoResultMap" type="org.example.javaeeb1.pojo.CartDto">
        <id column="cart_id" property="cartId" />
        <result column="user_id" property="userId" />
        <result column="goods_img" property="goodsImg" />
        <result column="num" property="num" />
        <result column="goods_name" property="goodsName" />
        <result column="create_time" property="createTime" />
        <result column="price" property="totalPrice" />
        <result column="goods_id" property="goodsId" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        cart_id, user_id, goods_id, num, create_time
    </sql>
    <insert id="addCart">
        insert into cart(user_id, goods_id, num, create_time, price)
        values(#{userId}, #{goodsId}, 1, #{createTime}, (select price from goods where goods_id = #{goodsId}))
    </insert>
    <select id="getAll"  resultMap="CartDtoResultMap">
        select cart_id,user_id,goods.goods_id,num,cart.create_time,goods_img,goods_name,cart.price,goods.goods_id  from cart,goods
        where cart.goods_id=goods.goods_id and user_id=#{userId}
    </select>
    <select id="getCartByUserIdAndGoodsId" resultMap="BaseResultMap">
        select * from cart where user_id=#{userId} and goods_id=#{goodsId}
    </select>
    <delete id="deleteCart">
        delete from cart where cart_id=#{cartId}

    </delete>
    <update id="updateCart">
        update cart set num=#{num} ,create_time=#{createTime},price=#{price} where cart_id=#{cartId}
    </update>

</mapper>

<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.example.mapper.BookstoreMapper">
    <resultMap id="CategoryResultMap" type="org.example.pojo.Bookstore">
        <id column="id" property="id"/>
        <result column="bk_name" property="name"/>
        <result column="bk_author" property="author"/>
        <result column="press" property="press"/>
        <result column="amount" property="amount"/>
    </resultMap>
    <update id="updateById">
        UPDATE bookstore
        SET bk_name = #{name},
            bk_author = #{author},
            press = #{press},
            amount = #{amount}
        WHERE id = #{id}
    </update>
    <select id="selectById" resultMap="CategoryResultMap">
        SELECT id, bk_name, bk_author, press, amount
        FROM bookstore
        WHERE id = #{id}
    </select>
</mapper>

<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.mapper.CustomerMapper">


    <resultMap id="Find1" type="org.example.pojo.Customer">
        <id property="id" column="id" />
        <result property="username" column="username" />
        <result property="jobs" column="jobs" />
        <result property="phone" column="phone" />
        <collection property="buy" ofType="org.example.pojo.buy"  column="id"
                    select="org.example.Mappers.BuyMapper.b"/>

    </resultMap>
    <select id="findCustomerOrders1" parameterType="integer" resultMap="Find1">
            select *from  customer where id=#{id}
    </select>






</mapper>